{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.20.1.json",
  "autosize": {
    "type": "fit",
    "contains": "padding"
  },
  "config": {
    "view": {
      "continuousWidth": 300,
      "continuousHeight": 300
    }
  },
  "width": "container",
  "height": "container",
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/vega/vega-datasets/master/data/world-110m.json",
        "format": {
          "feature": "countries",
          "type": "topojson"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      },
      "projection": {
        "type": "mercator"
      }
    },
    {
      "data": {
        "url": "data/5g_coverage.csv",
        "format": {
          "type": "csv"
        }
      },
      "mark": {
        "type": "circle",
        "opacity": 0.5,
        "size": 15
      },
      "encoding": {
        "color": {
          "field": "status",
          "legend": {
            "title": "Status"
          },
          "scale": {
            "domain": [
              "Commercial Availability",
              "Limited Availability",
              "Pre-Release"
            ],
            "range": ["#00A86B", "#FFBF00", "#0000FF"]
          },
          "type": "nominal"
        },
        "latitude": {
          "field": "latitude",
          "type": "quantitative"
        },
        "longitude": {
          "field": "longitude",
          "type": "quantitative"
        },
        "tooltip": [
          {
            "field": "city_name",
            "title": "City",
            "type": "nominal"
          },
          {
            "field": "operator",
            "title": "Operator",
            "type": "nominal"
          },
          {
            "field": "status",
            "title": "Deployment Status",
            "type": "nominal"
          }
        ]
      }
    }
  ]
}
